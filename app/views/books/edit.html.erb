<main>
  <div class ="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
        <div class ="error_explanation">
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class ="form-group">
    <%= form_with model: @book do |f| %>
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
    </div>
    <div class ="form-group">
      <label for="inputOpinion">Opinion</label><br>
      <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
    </div>
    <div class ="form-group">  
      <%= f.submit "Update Book" %><br>
    </div>
    <% end %>
    <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
      </div>
    </div>
  </div>
</main>
