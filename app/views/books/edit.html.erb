<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %><br>

  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
  <%= f.submit "Update Book" %><br>


<% end %>