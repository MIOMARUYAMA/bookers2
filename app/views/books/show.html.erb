


<%= render 'users/user_info', user: @user %>

<%= render 'new_book', book: Book.new %>

  <h1>Book detail</h1>
  <div>
      <%= link_to user_path(@book.user.id)  do %>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
      <% end %>
      <p><%= link_to @book.title, book_path(@book.id) %></p>
      <p><%= @book.body %></p>
      <% if @book.user == current_user %>
      <%= link_to "edit", edit_book_path %>
      <%= link_to "delete", book_path(@book), method: :delete,"data-confirm"=>"本当に消しますか？" %>
    <% end %>
  </div>