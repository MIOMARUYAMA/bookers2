  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'new_book', book: @book %>
       </div>
       <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
            <%= link_to user_path(@book.user.id)  do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
            <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
              <%= link_to "edit", edit_book_path, class:"btn btn-success" %>
              </td>
              <td>
              <%= link_to "delete", book_path(@book), class:"btn btn-danger", method: :delete,"data-confirm"=>"本当に消しますか？" %>
              </td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

