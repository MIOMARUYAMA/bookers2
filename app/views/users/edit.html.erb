<main>
  <div class ="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class ="error_explanation">
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class ="form-group">
            <label for="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>
          <div class ="form-group">
            <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
          </div>
          <div class ="form-group">
            <label for="inputIntroduction">Introduction</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
          </div>
          <div class ="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %><br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
