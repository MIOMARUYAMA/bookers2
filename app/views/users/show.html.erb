<%= render 'user_info', user: @user %>

<%= render 'books/new_book', book: @book %>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id)  do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p>opinion：<%= book.body %></p>
  
</div>
<% end %>